<p id="notice"><%= notice %></p>

<p>
<%= embed(@picture.video_link) %>  
</p>
<p>
  <% image_tag @picture.url %>
 </p>

 <p>
  <strong>Title:</strong>
  <%= @picture.title %>
</p>
<p>
<strong>Release Date:</strong>
  <%= long_date(@picture.date) %>
</p>

<%= render 'comments/form'%>

<p>
<strong>Comments:</strong>
<% @picture.comments.each do |comment| %>
  <div>
    <p><%= comment.body %></p>
    <p font-size="2px"><%= link_to 'Delete', comment, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<p>


